# Database Configuration
DATABASE_URL=sqlite+aiosqlite:///./data/vbrpg.db

# OpenAI API Key for LLM Integration
OPENAI_API_KEY=sk-your-openai-api-key-here
# AI provider configuration (optional): preferred AI API key and custom base URL
# Use these to point to OpenAI-compatible providers such as Deepseek
AI_API_KEY=sk-your-deepseek-or-openai-compatible-key-here
AI_API_BASE_URL=https://api.deepseek.example

# Application Security
SECRET_KEY=your-secret-key-here-generate-with-secrets-token-urlsafe-32

# Environment
ENVIRONMENT=development

# Logging
LOG_LEVEL=DEBUG

# CORS Origins (comma-separated)
CORS_ORIGINS=http://localhost:5173,http://localhost:3000
